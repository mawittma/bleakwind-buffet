<UserControl x:Class="PointOfSale.PhillyPoacherUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <StackPanel Height="350" Margin="25" Background="Transparent">

            <CheckBox IsChecked="{Binding Path=Sirloin}" FontSize="15" Foreground="White">Sirloin</CheckBox>
            <CheckBox IsChecked="{Binding Path=Onion}" FontSize="15" Foreground="White">Onion</CheckBox>
            <CheckBox IsChecked="{Binding Path=Roll}" FontSize="15" Foreground="White">Roll</CheckBox>
            
        </StackPanel>
        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Customize the Philly Poacher</TextBlock>
        <Button Click="DoneClick" Name="Done" Height="50" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Margin="50">Done</Button>
    </Grid>
</UserControl>
