<UserControl x:Class="PointOfSale.CandlehearthCoffeeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <ListBox Height="350" Margin="25" Background="Transparent">
            <ComboBox Height="30" Width="125">
                <ComboBoxItem IsSelected="True">Small</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>Large</ComboBoxItem>
            </ComboBox>
            <CheckBox IsChecked="False" FontSize="15" Foreground="White">Ice</CheckBox>
            <CheckBox IsChecked="False" FontSize="15" Foreground="White">Leave room for cream</CheckBox>
            <CheckBox IsChecked="False" FontSize="15" Foreground="White">Decaf</CheckBox>
        </ListBox>
        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Customize the Candleheart Coffee</TextBlock>
        <Button Click="DoneClick" Name="Done" Height="50" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Margin="50">Done</Button>
    </Grid>
</UserControl>
