<UserControl x:Class="PointOfSale.SmokehouseSkeletonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <StackPanel Height="350" Margin="25" Background="Transparent">

            <CheckBox IsChecked="{Binding Path=SausageLink}" FontSize="15" Foreground="White">Sausage Link</CheckBox>
            <CheckBox IsChecked="{Binding Path=Egg}" FontSize="15" Foreground="White">Egg</CheckBox>
            <CheckBox IsChecked="{Binding Path=Hashbrowns}" FontSize="15" Foreground="White">Hashbrowns</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pancake}" FontSize="15" Foreground="White">Pancakes</CheckBox>
            
        </StackPanel>
        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Customize the Smokehouse Skeleton</TextBlock>
        <Button Click="DoneClick" Name="Done" Height="50" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Margin="50">Done</Button>
    </Grid>
</UserControl>
